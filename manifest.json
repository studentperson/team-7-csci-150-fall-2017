{

	"name": "Cryptoid Mail",
	"version": "0.0.0.1",
	"manifest_version": 2,


	"description": "Easy Email Encryption",
	"icons": {"128": "img/cryptoid128.png"},


	"browser_action": {
	"default_icon": "img/cryptoid128.png",
	"default_title": "Cryptoid Mail",
	"default_popup": "manual.html"
},

	"background": {"page": "background.html"},

	"content_scripts": [
		{
			"matches": ["https://mail.google.com/mail/*"],
			"js": ["js/host_gmail.js", "js/utils.js"]
		}
	],

  	// Add any of these that we need or remove what we donâ€™t need
	"permissions": [
		"storage",
	"activeTab",
	"identity",
	"clipboardRead",
	"clipboardWrite",
	"contextMenus",
	"cookies"]

}
